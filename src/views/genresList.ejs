<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listado de Pel√≠culas</title>
  <link rel='stylesheet' href='/css/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
  <figure>
    <img src="/img/logo-DH.png" alt="Logo Digital House">
  </figure>
  <h1>LISTADO DE GENEROS</h1>
  <br>
  <p>
    <a class="botonAgregar" href="/genres/add">Agregar un genero</a>
    <a class="botonVolver" href="/">inicio</a>

  </p>
  <br>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Genero</th>
          <th scope="col">Ranking</th>
          <th scope="col">Peliculas</th>
          <th scope="col">Active</th>

        </tr>
      </thead>
      <tbody>
        <% genres.forEach(genre=> { %>
          <tr>
            <th scope="row">
              <%= genre.id %>
            </th>

            <td><a href="/movies/detail/<%= genre %>">
                <%= genre.name %>
              </a></td>
            <td>
              <%= genre.ranking %>
            </td>

            <td>
              <% if (genre.movies.length) { %>
              <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                      data-bs-target="#flush-collapseOne<%= genre.id %>" aria-expanded="false" aria-controls="flush-collapseOne<%= genre.id %>">
                    
                        <span>
                          <%= genre.movies.length %> Peliculas
                        </span> 
                     
                    </button>
                  </h2>
                  <div id="flush-collapseOne<%= genre.id %>" class="accordion-collapse collapse"
                    data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">
                      <ul>
                        <% genre.movies.forEach(movie=> { %>
                          <li> <a href="/movies/detail/<%= movie.id %>">
                              <%= movie.title %>
                            </a></li>
                          <% }) %>

                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <% }else{ %>
                <div class="alert alert-warning" role="alert">
                 Sin peliculas
                </div>
              <% } %>
            </td>
            <td>
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" <%=genre.active && 'checked' %> >

              </div>

            </td>

          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>